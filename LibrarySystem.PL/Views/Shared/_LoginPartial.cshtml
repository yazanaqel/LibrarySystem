<li class="dropdown">
	<a href="#"><span>My Account</span> <i class="bi bi-chevron-down"></i></a>
	<ul>
		@if (User.Identity.IsAuthenticated)
		{
			@if (User.IsInRole("Admin"))
			{
				<li>
					<a asp-controller="Book" asp-action="Create">Add New Book</a>
				</li>
			}

			<li>
				<a asp-controller="Borrowing" asp-action="MyBooks">My Books</a>
			</li>

			<li>
				<a asp-controller="User" asp-action="Logout">Logout</a>
			</li>

		}
		else
		{
			<li>
				<a asp-controller="User" asp-action="Register">Register</a>
			</li>
			<li>
				<a asp-controller="User" asp-action="Login">Login</a>
			</li>
		}
	</ul>
</li>
